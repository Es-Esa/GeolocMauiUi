<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ClientApp.Views.PictureDetectionPage">
    <ScrollView>
        <VerticalStackLayout Padding="30,0" Spacing="15">
            <Label
                Text="Image Analysis"
                Style="{StaticResource Headline}"
                SemanticProperties.HeadingLevel="Level1" />
            <Button
                Text="Select Image"
                ImageSource="gallery.png"
                ContentLayout="Left,10"
                Command="{Binding SelectImageCommand}"
                IsEnabled="{Binding IsSelectImageEnabled}"
                HorizontalOptions="Fill" />
            <Image
                HeightRequest="250"
                Aspect="AspectFit"
                BackgroundColor="LightGray"
                Margin="0,10,0,10"
                Source="{Binding SelectedImage}" />
            <ActivityIndicator
                IsRunning="{Binding IsBusy}"
                IsVisible="{Binding IsBusy}"
                HorizontalOptions="Center"
                VerticalOptions="Center" />
            <Button
                Text="Analyze Image"
                ImageSource="detect.png"
                ContentLayout="Left,10"
                Command="{Binding AnalyzeCommand}"
                IsEnabled="{Binding IsAnalyzeEnabled}"
                HorizontalOptions="Fill" />
            <Label
                Text="Detections:"
                Style="{StaticResource SubHeadline}"
                Margin="0,10,0,5"/>
            <ListView ItemsSource="{Binding Results}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <TextCell Text="{Binding}" />
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
