<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ClientApp.Views.MainPage">
    <ScrollView>
        <VerticalStackLayout Padding="30,0" Spacing="20" HorizontalOptions="Center">
            <Image Source="geoloc.png" HeightRequest="180" HorizontalOptions="Center" />
            <Label Text="GeoLoc" Style="{StaticResource Headline}" SemanticProperties.HeadingLevel="Level1" />
            <Label Text="Detect objects and track their locations. Use the tabs below for live detection, image analysis, and map view." 
                   FontSize="16" TextColor="Gray" HorizontalTextAlignment="Center" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
