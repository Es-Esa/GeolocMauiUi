<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="ClientApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:ClientApp.Views"
    Title="ClientApp">

    <TabBar>
        <ShellContent
            Title="Home"
            Route="Home"
            Icon="home.png"
            ContentTemplate="{DataTemplate views:MainPage}" />

        <ShellContent
            Title="Live detection"
            Route="Detect"
            Icon="detect.png"
            ContentTemplate="{DataTemplate views:CameraDetectionPage}" />

        <ShellContent
            Title="Map"
            Route="Map"
            Icon="location.png"
            ContentTemplate="{DataTemplate views:MapPage}" />

        <ShellContent
            Title="Image detection"
            Route="Img"
            Icon="imagedetect.png"
            ContentTemplate="{DataTemplate views:PictureDetectionPage}" />
    </TabBar>
</Shell>
